<style type="text/css">
  #{{this.elementId}} {
  position: relative;
  {{#if this.totalHeight}}
    height: {{this.totalHeight}}{{_rowUnit}};
  {{/if}}
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  box-sizing: border-box;
  }

  #{{
    this.elementId
  }} .ella-treadmill-item {
    -webkit-overflow-scrolling: 'touch';
  }

  #{{
    this.elementId
  }}.is-scrolling .ella-treadmill-item {
    pointer-events: none;
  }
</style>

{{#each this.indices as |_ idx|}}
  <EllaTreadmillItem
    @parent={{this}}
    @index={{get visibleIndexes (concat "" idx)}}
    @item={{get visibleContent (concat "" idx)}}
    @height={{_row}}
    @heightUnit={{_rowUnit}}
    @columns={{columns}}
    @pageSize={{numberOfVisibleItems}}
    @fluctuate={{fluctuate}}
    @fluctuateColumn={{fluctuateColumn}}
    @on-insert={{action "listItemInserted"}}
    @on-update={{action "listItemUpdated"}}
    @on-destroy={{action "listItemDestroyed"}} as |item index|
  >
    {{#if has-block}}
      {{yield item index}}
    {{else}}
      {{get visibleContent (concat "" idx)}}
    {{/if}}
  </EllaTreadmillItem>
{{else}}
  {{yield to="inverse"}}
{{/each}}