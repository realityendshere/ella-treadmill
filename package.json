{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "http://github.com/realityendshere/ella-treadmill.git"
  },
  "license": "MIT",
  "author": "Dana Franklin",
  "scripts": {
    "prepare": "yarn workspace ella-treadmill run prepare",
    "start": "npm-run-all --parallel start:*",
    "start:addon": "yarn workspace ella-treadmill run start",
    "start:test-app": "yarn workspace test-app run start",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*",
    "lint:addon": "yarn workspace ella-treadmill run lint",
    "lint:test-app": "yarn workspace test-app run lint",
    "lint:fix": "npm-run-all --aggregate-output --continue-on-error --parallel lint:fix:*",
    "lint:fix:addon": "yarn workspace ella-treadmill run lint:fix",
    "lint:fix:test-app": "yarn workspace test-app run lint:fix",
    "test": "npm-run-all --aggregate-output --continue-on-error --parallel test:*",
    "test:addon": "yarn workspace ella-treadmill run test",
    "test:test-app": "yarn workspace test-app run test"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1"
  }
}